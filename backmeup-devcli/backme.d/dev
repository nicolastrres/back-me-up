#!/usr/bin/env bash
# vim: ft=sh:

use "dev"
use "docker"


SUBCOMMAND_DESC="\t\tDev commands"
SUBCOMMAND_HELP=$(cat <<EOH
b|build-image       Build docker image
s|static-analysis   Run flake8
ut|unit-tests       Run unit tests.
t|tests             Run all tests. (Unit and static analysis)
EOH
)

case ${1} in
  b|build-image)
    build_image
  ;;

  t|tests)
    tests
  ;;

  ut|unit-tests)
    unit_tests
  ;;

  s|static-analysis)
    static_analysis
  ;;

  *)
    if [ ! -z ${1} ]
    then
      in_red "'${1}' not found"
      _help
    fi
esac
